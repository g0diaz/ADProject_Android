<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/biege"
    android:padding="20dp"
    tools:context=".activity.EditUserProfileActivity">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="displayName:"
        android:background="@drawable/border"/>
    <EditText
        android:id="@+id/displayname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text1"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:background="@drawable/border"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/displayname"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/border" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView"
        android:background="@drawable/border"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="imageUrl:"/>
    <EditText
        android:id="@+id/imageUrl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="top"
        android:layout_below="@id/text2"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:background="@drawable/border"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageUrl"
        android:background="@drawable/border"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="bio:"/>
    <EditText
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/text3"
        android:paddingLeft="10dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:background="@drawable/border"/>

    <Button
        android:id="@+id/completBtn"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio"
        android:layout_centerInParent="true"
        android:text="submit"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/biege"
        android:src="@color/darkBlue"/>
</RelativeLayout>