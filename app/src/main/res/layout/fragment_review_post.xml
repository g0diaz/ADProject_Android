<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biege"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/title_bar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar_placeholder">

        <ImageView
            android:id="@+id/gameimage"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/game_title"
            android:layout_marginBottom="10dp"/>
        
        <TextView
            android:id="@+id/game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/review_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="GG"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="@string/review_title"
            android:textSize="17sp"
            android:layout_above="@id/review_body"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/review_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:layout_marginTop="15dp"
            android:layout_above="@id/reviewTitleEditText"
            android:text="@string/review_body"/>

        <EditText
            android:id="@+id/reviewTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="Title" />

        <EditText
            android:id="@+id/reviewBodyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Review Message"
            android:layout_below="@+id/reviewTitleEditText"/>

        <ImageButton
            android:id="@+id/recommend_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_below="@id/reviewBodyEditText"
            android:src="@drawable/baseline_arrow_upward_24"/>

        <ImageButton
            android:id="@+id/not_recommend_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_below="@id/reviewBodyEditText"
            android:layout_toRightOf="@id/recommend_button"
            android:src="@drawable/baseline_arrow_downward_24" />

        <TextView
            android:id="@+id/recommend_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/recommend_button"
            android:layout_marginLeft="10dp"
            android:text="Like"/>

        <TextView
            android:id="@+id/not_recommend_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/not_recommend_button"
            android:layout_toRightOf="@id/recommend_text"
            android:layout_marginLeft="-5dp"
            android:text="Dislike"/>

    </RelativeLayout>

</RelativeLayout>