<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/border">

    <ImageView
        android:id="@+id/imageUrl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/reviewTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/imageUrl"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/editBtn"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/imageUrl"
        android:layout_below="@id/reviewTextView"
        android:layout_toLeftOf="@id/editBtn"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/reviewUserTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageUrl"
        android:gravity="center"
        android:textColor="@color/darkBlue"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="8dp"/>

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateTextView"
        android:layout_toRightOf="@id/reviewUserTextView"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:padding="8dp"
        android:background="@drawable/border"
        app:trimExpandedText="@string/read_less"
        app:trimCollapsedText="@string/read_more"
        app:trimMode="trimModeLength"
        app:trimLength="95"
        app:colorClickableText="@color/darkBlue"/>

    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        android:text="Edit"/>

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dateTextView"
        android:layout_below="@id/editBtn"
        android:layout_marginTop="5dp"
        android:text="Delete"/>

</RelativeLayout>