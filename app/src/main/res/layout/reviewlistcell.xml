<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/pageSetup"
    android:background="@drawable/border">

    <TextView
        android:id="@+id/reviewUserTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewTextView"
        android:layout_toEndOf="@id/reviewUserTextView"
        android:layout_marginStart="10dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:padding="8dp"/>

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/reviewUserTextView"
        android:gravity="left|center_vertical"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:colorClickableText="@color/darkBlue"
        app:trimCollapsedText="@string/read_more"
        app:trimExpandedText="@string/read_less"
        app:trimLength="95"
        app:trimMode="trimModeLength" />

    <TextView
        android:id="@+id/reviewTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/reviewUserTextView"
        android:layout_below="@id/messageTextView"
        android:layout_marginStart="18dp"
        android:gravity="left|center_vertical"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <Button
        style="@style/buttonStyle"
        android:id="@+id/deleteBtn"
        android:layout_below="@id/messageTextView"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/reviewTextView"
        android:text="Delete"/>

</RelativeLayout>